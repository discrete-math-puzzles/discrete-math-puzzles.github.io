$dividers-count = 26
$dividers-width = 100% / $dividers-count
$dividers-offset = $dividers-width / 2
$max-height = 350px

$lines-count = 13
$lines-height = $max-height / $lines-count
$lines-offset = $lines-height / 2
$line-height = 3px
$line-top-offset = ($lines-height - $line-height) / 2

$wrapper-color = #5cb85c
$divider-color = #ccc
$divider-hover-color = #f00
$disable-color = #ccc

.activity-selection
    .wrapper
        border: 1px solid $wrapper-color
        max-width 900px
        margin-left auto
        margin-right auto
        min-width 300px
        height: $max-height
        max-height: $max-height
        position relative
        margin: 30px auto

        .lines,
        .dividers
            width: 100%
            height: 100%
            position: absolute

        .line-wrap
            display: block
            height: $lines-height
            width: 100%
            position: relative
            text-align: initial

            &.active
                .line
                    background: blue

            &.disable
                .line-i
                    cursor: auto
                .line
                    background: $disable-color

            .line-i
                padding: 5px 0
                cursor: pointer

            .line
                display: inline-block
                height: $line-height
                background: #000
                margin-top: $line-top-offset
                width: 100%
                transition: background .2s ease

        .divider
            display: inline-block
            width: $dividers-width
            height: 100%

            &.active
                .inner
                    border-right: 1px dashed blue

            &:first-child
                margin-left: $dividers-offset

            .inner
                display: inline-block
                height: 100%
                width: 0
                border-right: 1px dashed $divider-color
                margin-left: -50%
                transition: border .2s ease
