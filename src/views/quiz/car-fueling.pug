                button(type='button', class='btn btn-info check', data-id='2') Start the journey
                button(type='button', class='btn btn-info reset', data-id='2') Reset

        div(role='tabpanel', class='tab-pane', id='level3')
            div(class='center text-center padded')
                div(class='tank')
                    div(class='inner')

            div(class='center text-center padded')
                div(class='petrolstation')
                    each i in [0,1,2,3,4,5,6,7]
                        if i === 1 || i === 2 || i === 6
                            div(class='station')
                                img(src="gasoline-pump.png", data-id=i)
