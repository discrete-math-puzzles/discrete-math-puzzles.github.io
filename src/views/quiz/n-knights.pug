extends ../layout.pug

block pagetitle
    title Knights

block title
    div(class='container')
        h1 Knights
        p(class='subtitle text-center') Place the maximum number of knights so that no two of them attack each other.

block container
    div(class='center text-center padded')
        svg(id='knight1', class='borderred', width='100%', height='100%')

    p(class='center text-center')
        button(type='button', class='reset', data-id='1', class='btn btn-info') Reset
        
    p(class='center text-center')
        span(id='hint')

block append scripts
    script(src='https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.5.1/snap.svg-min.js')
    script(src='/javascripts/quiz/n-knights.js')