extends ../layout.pug

block pagetitle
    title N Queens

block title
    div(class='container')
        h1 N Queens
        p(class='subtitle text-center') Place N queens such that no two attack each other. Click on a cell to add or remove a queen.

block container
    ul(class='nav nav-tabs', role='tablist')
        li(role='presentation', class='active')
            a(href data-target='#level1' role='tab' data-toggle='tab') Level 1: N = 2
        li(role='presentation')
            a(href data-target='#level2' role='tab' data-toggle='tab') Level 2: N = 3
        li(role='presentation')
            a(href data-target='#level3' role='tab' data-toggle='tab') Level 3: N = 4
        li(role='presentation')
            a(href data-target='#level4' role='tab' data-toggle='tab') Level 4: N = 5
        li(role='presentation')
            a(href data-target='#level5' role='tab' data-toggle='tab') Level 5: N = 8

    div(class='tab-content')
        div(role='tabpanel', class='tab-pane active', id='level1')
            div(class='center text-center padded')
                svg(id='queen2', class='borderred', width='100%', height='100%')

            p(class='center text-center')
                button(type='button', id='impossible', class='btn btn-default', data-id='1', data-toggle='modal', data-target='#congratulations_modal') It's impossible
                button(type='button', class='reset', data-id='1', class='btn btn-info') Reset
                
            p(class='center text-center')
                span(id='hint')

        div(role='tabpanel', class='tab-pane', id='level2')
            div(class='center text-center padded')
                svg(id='queen3', class='borderred', width='100%', height='100%')

            p(class='center text-center')
                button(type='button', id='impossible', class='btn btn-default', data-id='2', data-toggle='modal', data-target='#congratulations_modal') It's impossible
                button(type='button', class='reset', data-id='2', class='btn btn-info') Reset
                
            p(class='center text-center')
                span(id='hint')

        div(role='tabpanel', class='tab-pane', id='level3')
            div(class='center text-center padded')
               svg(id='queen4', class='borderred', width='100%', height='100%')

            p(class='center text-center')
                button(type='button', id='impossible', class='btn btn-default', data-id='3', data-toggle='modal', data-target='#possible_modal') It's impossible
                button(type='button', class='reset', data-id='3', class='btn btn-info') Reset
                
            p(class='center text-center')
                span(id='hint')

        div(role='tabpanel', class='tab-pane', id='level4')
            div(class='center text-center padded')
               svg(id='queen5', class='borderred', width='100%', height='100%')

            p(class='center text-center')
                button(type='button', id='impossible', class='btn btn-default', data-id='4', data-toggle='modal', data-target='#possible_modal') It's impossible
                button(type='button', class='reset', data-id='4', class='btn btn-info') Reset
                
            p(class='center text-center')
                span(id='hint')

        div(role='tabpanel', class='tab-pane', id='level5')
            div(class='center text-center padded')
               svg(id='queen8', class='borderred', width='100%', height='100%')

            p(class='center text-center')
                button(type='button', id='impossible', class='btn btn-default', data-id='5', data-toggle='modal', data-target='#possible_modal') It's impossible
                button(type='button', class='reset', data-id='5', class='btn btn-info') Reset
                
            p(class='center text-center')
                span(id='hint')

block append scripts
    script(src='https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.5.1/snap.svg-min.js')
    script(src='/javascripts/quiz/n-queens.js')